%h1 Artworks

%table
  %thead
    %tr
      %th Name
      %th Artist
      %th Year
      %th Description

  %tbody
    - @artworks.each_with_index do |artwork, i|
      - row_class = ""
      - if i % 2 == 0
        - row_class = "even"
      - else
        - row_class = "odd"

      %tr
        %td{:class => "#{row_class}"}= artwork.name
        %td{:class => "#{row_class}"}= artwork.artist
        %td{:class => "#{row_class}"}= artwork.year
        %td{:class => "#{row_class}"}= artwork.description

%br
