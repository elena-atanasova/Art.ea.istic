%h1 Exhibitions

%table
  %thead
    %tr
      %th Artwork
      %th Venue
      %th
      %th
      %th

  %tbody
    - @exhibitions.each_with_index do |exhibition, i|
      - row_class = ""
      - if i % 2 == 0
        - row_class = "even"
      - else
        - row_class = "odd"

      %tr
        %td{:class => "#{row_class}"}= exhibition.artwork.name
        %td{:class => "#{row_class}"}= exhibition.venue
        %td{:class => "#{row_class}"}= link_to t('.show'), exhibition
        %td{:class => "#{row_class}"}= link_to t('.edit'), edit_exhibition_path(exhibition)
        %td{:class => "#{row_class}"}= link_to t('.destroy'), exhibition, method: :delete, data: { confirm: 'Are you sure?' }

%br
